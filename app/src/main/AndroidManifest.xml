<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/max_super_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/max_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaybeClicker">

        <!-- Главное окно, открывается первым -->
        <activity
            android:name=".RegistrationWindow"
            android:configChanges="orientation|screenSize|fontScale"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Второе Activity -->
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|fontScale"

            android:exported="false" />
    </application>

</manifest>
